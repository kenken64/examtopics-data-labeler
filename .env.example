# AWS Certification App - Environment Variables
# Copy this file to .env and fill in your actual values

# ==============================================
# Database Configuration
# ==============================================
MONGODB_URI=mongodb://admin:password123@localhost:27017/awscert?authSource=admin

# ==============================================
# Authentication & Security
# ==============================================
JWT_SECRET=your-super-secure-jwt-secret-here-change-in-production

# ==============================================
# Frontend Configuration
# ==============================================
NEXT_PUBLIC_PDF_CONVERSION_API_URL=http://localhost:5000
NEXT_TELEMETRY_DISABLED=1

# ==============================================
# Backend Configuration
# ==============================================
FLASK_ENV=development
PYTHONUNBUFFERED=1
PYTHONDONTWRITEBYTECODE=1

# ==============================================
# Telegram Bot Configuration
# ==============================================
BOT_TOKEN=your-telegram-bot-token-from-botfather
FRONTEND_URL=http://localhost:3000

# ==============================================
# Docker Hub Configuration (for CI/CD)
# ==============================================
# These should be set as GitHub Secrets, not in .env files
# DOCKER_HUB_USERNAME=your-dockerhub-username
# DOCKER_HUB_PAT=your-dockerhub-personal-access-token

# ==============================================
# Optional Services
# ==============================================
REDIS_URL=redis://localhost:6379

# ==============================================
# Development Settings
# ==============================================
NODE_ENV=development
PORT_FRONTEND=3000
PORT_BACKEND=5000
PORT_TELEGRAM_BOT=8080

# ==============================================
# Production Settings (uncomment for production)
# ==============================================
# NODE_ENV=production
# FLASK_ENV=production
# MONGODB_URI=mongodb+srv://user:pass@cluster.mongodb.net/awscert?retryWrites=true&w=majority