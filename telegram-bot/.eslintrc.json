{
  "extends": ["eslint:recommended"],
  "env": {
    "node": true,
    "es2022": true
  },
  "parserOptions": {
    "ecmaVersion": 2022,
    "sourceType": "commonjs"
  },
  "rules": {
    "no-console": "off",
    "no-unused-vars": ["warn", { "argsIgnorePattern": "^_" }],
    "semi": ["error", "always"],
    "space-before-function-paren": "off",
    "no-trailing-spaces": "warn",
    "indent": ["error", 2],
    "quotes": ["error", "single"],
    "no-undef": "error",
    "no-unreachable": "error"
  }
}